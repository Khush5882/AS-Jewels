@model IEnumerable<ASJewellers.Models.Product>

<h2>Welcome to AS Jewellers</h2>
<div class="product-grid">
    @foreach (var product in Model)
    {
        <div class="product-card">
            <img src="@product.ImageUrl" alt="@product.Name" />
            <h3>@product.Name</h3>
            <p>Price: @product.Price</p>
            <a href="/Product/ProductDetails/@product.Id">View Details</a>
        </div>
    }
</div>

